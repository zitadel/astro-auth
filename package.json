{
  "name": "@mridang/astro-auth",
  "description": "A comprehensive Auth.js integration for Astro applications with TypeScript support, framework-agnostic HTTP adapters, and role-based access control",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mridang/astro-auth.git"
  },
  "author": {
    "name": "Mridang Agarwalla",
    "email": "mridang.agarwalla@gmail.com",
    "url": "https://github.com/mridang"
  },
  "scripts": {
    "prepack": "tsc",
    "build": "tsup",
    "test": "jest --verbose --config=jest.config.mjs --runInBand",
    "test:watch": "npm run test -- --watch",
    "test:debug": "jest --verbose --config=jest.config.mjs --runInBand --detectOpenHandles",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix"
  },
  "peerDependencies": {
    "@auth/core": ">=0.40.0",
    "astro": ">=5.0.0",
    "vite": "^6.0.0 || ^7.0.0"
  },
  "devDependencies": {
    "@auth/core": "^0.41.1",
    "@jest/globals": "^30.0.5",
    "@mridang/eslint-defaults": "^1.5.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/parser": "^8.46.2",
    "astro": "^5.0.0",
    "esbuild": "^0.27.0",
    "eslint": "9.39.1",
    "eslint-plugin-astro": "^1.4.0",
    "jest": "30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-fetch-mock": "^3.0.3",
    "knip": "^5.66.4",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "rollup": "^4.52.5",
    "semantic-release": "^25.0.1",
    "ts-jest": "29.4.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "astro",
    "auth",
    "authentication",
    "integration",
    "@auth",
    "@auth/core",
    "authjs",
    "jwt",
    "oauth",
    "astro-auth",
    "astro-integration",
    "astro-component",
    "withastro"
  ],
  "private": false,
  "homepage": "https://github.com/mridang/astro-auth",
  "bugs": "https://github.com/mridang/astro-auth/issues",
  "publishConfig": {
    "access": "public"
  }
}
